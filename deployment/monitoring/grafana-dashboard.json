{
  "dashboard": {
    "id": null,
    "title": "EMR区块链系统监控仪表板",
    "tags": ["emr", "blockchain", "healthcare"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(up, namespace)",
          "refresh": 1,
          "includeAll": false,
          "multi": false,
          "current": {
            "value": "emr-namespace",
            "text": "emr-namespace"
          }
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up{namespace=\"$namespace\"}, service)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "部署事件",
          "datasource": "Prometheus",
          "expr": "ALERTS{alertname=\"DeploymentEvent\"}",
          "iconColor": "green",
          "enable": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "系统概览",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(up{namespace=\"$namespace\"} == 1)",
            "legendFormat": "在线服务数",
            "refId": "A"
          },
          {
            "expr": "count(up{namespace=\"$namespace\"} == 0)",
            "legendFormat": "离线服务数",
            "refId": "B"
          },
          {
            "expr": "sum(rate(http_requests_total{namespace=\"$namespace\"}[5m]))",
            "legendFormat": "总请求率 (req/s)",
            "refId": "C"
          },
          {
            "expr": "avg(rate(http_request_duration_seconds_sum{namespace=\"$namespace\"}[5m]) / rate(http_request_duration_seconds_count{namespace=\"$namespace\"}[5m]))",
            "legendFormat": "平均响应时间 (s)",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 2,
        "title": "服务健康状态",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "up{namespace=\"$namespace\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "indexByName": {},
              "renameByName": {
                "instance": "实例",
                "job": "服务",
                "Value": "状态"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "状态"},
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "mappings",
                  "value": [
                    {"options": {"0": {"text": "离线", "color": "red"}}, "type": "value"},
                    {"options": {"1": {"text": "在线", "color": "green"}}, "type": "value"}
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 3,
        "title": "告警状态",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "ALERTS{namespace=\"$namespace\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "renameByName": {
                "alertname": "告警名称",
                "alertstate": "状态",
                "severity": "严重程度",
                "instance": "实例"
              }
            }
          }
        ]
      },
      {
        "id": 4,
        "title": "HTTP请求率",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=\"$namespace\", service=~\"$service\"}[5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps",
            "min": 0
          }
        }
      },
      {
        "id": 5,
        "title": "HTTP响应时间",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{namespace=\"$namespace\", service=~\"$service\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{namespace=\"$namespace\", service=~\"$service\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} P50",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s",
            "min": 0
          }
        }
      },
      {
        "id": 6,
        "title": "HTTP错误率",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=\"$namespace\", service=~\"$service\", status=~\"5..\"}[5m])) by (service) / sum(rate(http_requests_total{namespace=\"$namespace\", service=~\"$service\"}[5m])) by (service) * 100",
            "legendFormat": "{{service}} 5xx错误率",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{namespace=\"$namespace\", service=~\"$service\", status=~\"4..\"}[5m])) by (service) / sum(rate(http_requests_total{namespace=\"$namespace\", service=~\"$service\"}[5m])) by (service) * 100",
            "legendFormat": "{{service}} 4xx错误率",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 7,
        "title": "系统资源使用率",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}} CPU使用率",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{instance}} 内存使用率",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 8,
        "title": "数据库性能",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "mysql_global_status_threads_connected",
            "legendFormat": "MySQL连接数",
            "refId": "A"
          },
          {
            "expr": "rate(mysql_global_status_queries[5m])",
            "legendFormat": "MySQL查询率",
            "refId": "B"
          },
          {
            "expr": "rate(mysql_global_status_slow_queries[5m])",
            "legendFormat": "MySQL慢查询率",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 9,
        "title": "区块链网络状态",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "fabric_peer_connections",
            "legendFormat": "{{instance}} 对等节点连接数",
            "refId": "A"
          },
          {
            "expr": "rate(fabric_blocks_total[5m])",
            "legendFormat": "{{instance}} 区块生成率",
            "refId": "B"
          },
          {
            "expr": "rate(fabric_transactions_total[5m])",
            "legendFormat": "{{instance}} 交易处理率",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 10,
        "title": "IPFS存储状态",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "ipfs_repo_size_bytes / 1024 / 1024 / 1024",
            "legendFormat": "{{instance}} 存储使用量 (GB)",
            "refId": "A"
          },
          {
            "expr": "ipfs_peers",
            "legendFormat": "{{instance}} 对等节点数",
            "refId": "B"
          },
          {
            "expr": "rate(ipfs_api_requests_total[5m])",
            "legendFormat": "{{instance}} API请求率",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 11,
        "title": "业务指标",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36},
        "targets": [
          {
            "expr": "rate(emr_medical_record_creation_total[5m])",
            "legendFormat": "医疗记录创建率",
            "refId": "A"
          },
          {
            "expr": "rate(emr_user_login_total[5m])",
            "legendFormat": "用户登录率",
            "refId": "B"
          },
          {
            "expr": "rate(emr_file_upload_total[5m])",
            "legendFormat": "文件上传率",
            "refId": "C"
          },
          {
            "expr": "emr_active_users",
            "legendFormat": "活跃用户数",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 12,
        "title": "网络流量",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[5m]) * 8",
            "legendFormat": "{{instance}} {{device}} 入站流量",
            "refId": "A"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m]) * 8",
            "legendFormat": "{{instance}} {{device}} 出站流量",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "bps",
            "min": 0
          }
        }
      }
    ]
  },
  "overwrite": true
}