# Development Environment Configuration
# Blockchain EMR System - Development Settings

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=blockchain_emr_dev
MYSQL_USER=emr_dev_user
MYSQL_PASSWORD=dev_password_123
MYSQL_ROOT_PASSWORD=dev_root_password_123
MYSQL_CONNECTION_LIMIT=20
MYSQL_TIMEOUT=30000

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=1800

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
FABRIC_NETWORK_NAME=blockchain-emr-dev-network
FABRIC_CHANNEL_NAME=emr-dev-channel
FABRIC_CHAINCODE_NAME=emr-dev-chaincode
FABRIC_CHAINCODE_VERSION=1.0

FABRIC_PEER_ENDPOINT=localhost:7051
FABRIC_PEER_TLS_ENABLED=true
FABRIC_ORDERER_ENDPOINT=localhost:7050
FABRIC_CA_ENDPOINT=localhost:7054
FABRIC_CA_ADMIN_USER=admin
FABRIC_CA_ADMIN_PASSWORD=adminpw

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_TIMEOUT=15000

IPFS_CLUSTER_HOST=localhost
IPFS_CLUSTER_PORT=9094
IPFS_CLUSTER_SECRET=dev_cluster_secret_32_characters_long_for_development_use_only
IPFS_CLUSTER_REPLICATION_FACTOR_MIN=1
IPFS_CLUSTER_REPLICATION_FACTOR_MAX=2

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=dev_jwt_secret_key_for_development_only_not_for_production_use
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

ENCRYPTION_KEY=dev_encryption_key_32_chars_long
MASTER_ENCRYPTION_KEY=dev_master_encryption_key_64_characters_long_for_development_only
BCRYPT_ROUNDS=10

SESSION_SECRET=dev_session_secret_key
SESSION_TIMEOUT=86400
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_FORMAT=dev
LOG_FILE_PATH=./logs/dev-application.log
LOG_ERROR_FILE_PATH=./logs/dev-error.log
LOG_MAX_SIZE=5m
LOG_MAX_FILES=3

PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_METRICS_INTERVAL=10000
PERFORMANCE_TPS_TARGET=100
PERFORMANCE_LATENCY_TARGET=200

HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60000

METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=false

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
STORAGE_L1_ENABLED=true
STORAGE_L1_TYPE=redis
STORAGE_L1_TTL=1800
STORAGE_L1_MAX_SIZE=100MB

STORAGE_L2_ENABLED=true
STORAGE_L2_TYPE=mysql
STORAGE_L2_TTL=43200
STORAGE_L2_MAX_SIZE=1GB

STORAGE_L3_ENABLED=true
STORAGE_L3_TYPE=ipfs
STORAGE_L3_TTL=604800
STORAGE_L3_MAX_SIZE=10GB

STORAGE_L4_ENABLED=false

UPLOAD_MAX_FILE_SIZE=10MB
UPLOAD_ALLOWED_TYPES=pdf,jpg,jpeg,png,txt
UPLOAD_TEMP_DIR=./temp/dev-uploads
UPLOAD_VIRUS_SCAN_ENABLED=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
EMAIL_SERVICE_ENABLED=false
SMS_SERVICE_ENABLED=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEV_MODE=true
DEV_MOCK_BLOCKCHAIN=false
DEV_MOCK_IPFS=false
DEV_SEED_DATA=true
DEV_AUTO_MIGRATE=true

TEST_DATABASE=blockchain_emr_dev_test
TEST_REDIS_DB=1
TEST_TIMEOUT=30000
TEST_COVERAGE_THRESHOLD=80

DEBUG_ENABLED=true
DEBUG_NAMESPACE=emr:*
DEBUG_SQL_QUERIES=true
DEBUG_PERFORMANCE=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_MULTI_FACTOR_AUTH=false
FEATURE_BIOMETRIC_AUTH=false
FEATURE_BLOCKCHAIN_ANALYTICS=true
FEATURE_AI_DIAGNOSTICS=false
FEATURE_TELEMEDICINE=false
FEATURE_MOBILE_APP=false

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================
AUDIT_ENABLED=true
AUDIT_LOG_ALL_REQUESTS=false
AUDIT_LOG_SENSITIVE_DATA=false
AUDIT_RETENTION_DAYS=30

HIPAA_COMPLIANCE=false
GDPR_COMPLIANCE=false
DATA_RETENTION_POLICY=30_days
ANONYMIZATION_ENABLED=false

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================
BACKUP_ENABLED=false
DR_ENABLED=false
