{
  "name": "blockchain-emr-system",
  "version": "2.0.0",
  "description": "基于区块链的电子病历共享系统 - 企业级解决方案",
  "main": "index.js",
  "type": "commonjs",
  "workspaces": [
    "backend-app",
    "react-app",
    "chaincode"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm --prefix backend-app run dev",
    "dev:frontend": "npm --prefix react-app run start",
    "dev:lightweight": "LIGHT_MODE=true WARM_CACHE_ENABLED=false METRICS_INTERVAL_MS=300000 npm run dev:backend",
    "start:lightweight": "./start-lightweight.sh",
    "start:dev-only": "./start-dev-only.sh",
    "stop:lightweight": "./stop-lightweight.sh",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm --prefix backend-app run build",
    "build:frontend": "npm --prefix react-app run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:env": "npm run test:env:backend && npm run test:env:frontend",
    "test:env:backend": "npm --prefix backend-app run test:env",
    "test:env:frontend": "npm --prefix react-app test -- --watchAll=false",
    "test:backend": "npm --prefix backend-app test",
    "test:frontend": "npm --prefix react-app test -- --watchAll=false",
    "test:e2e": "npm run test:e2e:backend",
    "test:e2e:backend": "npm --prefix backend-app run test:e2e",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm --prefix backend-app run lint",
    "lint:frontend": "npm --prefix react-app run type-check",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend",
    "lint:fix:backend": "npm --prefix backend-app run lint:fix",
    "lint:fix:frontend": "npm --prefix react-app run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "npm run type-check:backend && npm run type-check:frontend",
    "type-check:backend": "npm --prefix backend-app run type-check",
    "type-check:frontend": "npm --prefix react-app run type-check",
    "prepare": "husky install",
    "deploy:dev": "docker-compose -f deployment/docker/docker-compose.yml up -d",
    "deploy:prod": "kubectl apply -f deployment/k8s/",
    "cleanup": "bash scripts/project-cleanup.sh",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "monitoring:start": "docker-compose -f deployment/monitoring/prometheus.yml up -d",
    "docs:build": "npm run docs:api",
    "docs:api": "npm --prefix backend-app run docs",
    "blockchain:deploy": "cd chaincode && echo 'Deploy chaincode to Fabric network'",
    "fabric:start": "cd fabric && echo 'Start Fabric network'",
    "health:check": "bash scripts/health-check.sh",
    "performance:test": "npm run test:performance:backend",
    "test:performance:backend": "npm --prefix backend-app run test:performance",
    "install:all": "npm install && npm --prefix backend-app install && npm --prefix react-app install"
  },
  "keywords": [
    "blockchain",
    "healthcare",
    "emr",
    "hyperledger-fabric",
    "ipfs",
    "react",
    "nodejs",
    "typescript",
    "medical-records",
    "privacy",
    "security"
  ],
  "author": "EMR Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/compression": "^1.8.1",
    "@types/redis": "^4.0.10",
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "core-js-pure": "^3.45.1",
    "form-data": "^4.0.4",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "redis": "^5.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0"
  },
  "overrides": {
    "jsrsasign": "^11.1.0",
    "form-data": "^4.0.4",
    "nanoid": "^5.0.9",
    "tar": "^6.2.1",
    "tough-cookie": "^4.1.3",
    "ws": "^8.18.0",
    "fabric-network": "^2.2.20",
    "fabric-ca-client": "^2.2.20",
    "parse-duration": "^2.1.3",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "backend-app/src/**/*.{ts,tsx}": [
      "npm --prefix backend-app run lint:fix",
      "npm --prefix backend-app run type-check"
    ],
    "react-app/src/**/*.{ts,tsx,js,jsx}": [
      "npm --prefix react-app run lint:fix",
      "npm --prefix react-app run type-check"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c 'cd $(dirname \"$0\") && if [ -f package.json ] && grep -q \"jest\" package.json; then npm test -- --findRelatedTests --passWithNoTests; fi'"
    ]
  }
}
