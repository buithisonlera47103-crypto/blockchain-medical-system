{
  "title": "EMR Backend Performance & TPS",
  "uid": "emr-perf",
  "timezone": "browser",
  "version": 1,
  "schemaVersion": 39,
  "editable": true,
  "style": "dark",
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Requests per second (1m)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "targets": [
        { "refId": "A", "expr": "rate(http_requests_total[1m])" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto" }
    },
    {
      "type": "stat",
      "title": "Error rate (5m)",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
      "targets": [
        { "refId": "A", "expr": "rate(emr_errors_total[5m]) / clamp_min(rate(emr_requests_total[5m]), 1)" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto" },
      "fieldConfig": { "defaults": { "unit": "percentunit" } }
    },
    {
      "type": "gauge",
      "title": "Cache hit rate (5m)",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 6 },
      "targets": [
        { "refId": "A", "expr": "(increase(cache_get_hit_total[5m])) / (increase(cache_get_hit_total[5m]) + increase(cache_get_miss_total[5m]))" }
      ],
      "fieldConfig": { "defaults": { "min": 0, "max": 1, "unit": "percentunit", "thresholds": { "mode": "absolute", "steps": [ {"color": "red", "value": null }, { "color": "yellow", "value": 0.7 }, { "color": "green", "value": 0.9 } ] } } }
    },
    {
      "type": "timeseries",
      "title": "HTTP latency (ms)",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "avg_over_time(http_request_duration_ms[5m])" }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "type": "timeseries",
      "title": "DB query duration (ms)",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "avg_over_time(db_query_duration_ms[5m])" }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "type": "timeseries",
      "title": "DB pool utilization (%)",
      "gridPos": { "x": 0, "y": 14, "w": 12, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "db_pool_utilization_percent" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } }
    },
    {
      "type": "timeseries",
      "title": "IPFS latency (ms)",
      "gridPos": { "x": 12, "y": 14, "w": 12, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "avg_over_time(ipfs_add_duration_ms[5m])" },
        { "refId": "B", "expr": "avg_over_time(ipfs_cat_duration_ms[5m])" }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "type": "timeseries",
      "title": "Blockchain Tx latency (ms)",
      "gridPos": { "x": 0, "y": 22, "w": 12, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "avg_over_time(blockchain_tx_latency_ms[5m])" }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "type": "stat",
      "title": "Blockchain Tx success rate (5m)",
      "gridPos": { "x": 12, "y": 22, "w": 12, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "increase(blockchain_tx_success_total[5m]) / clamp_min(increase(blockchain_tx_success_total[5m]) + increase(blockchain_tx_failure_total[5m]), 1)" }
      ],
      "fieldConfig": { "defaults": { "unit": "percentunit" } }
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] }
}

